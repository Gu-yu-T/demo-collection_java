<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %highlight([%thread]) %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache.flink" level="Info" />


  <!-- 确保Root Logger输出INFO及以上日志 -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>